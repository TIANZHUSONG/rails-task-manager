<h1>My tasks</h1>
<h2><% @tasks.each do |task|%>
<h3><input type="checkbox" <%= if task.completed
  "checked"
else
  "unchecked"
  end %>><%= link_to task.title,task_path(task.id) %></h3>
<%= link_to "Delete", destroy_path(task.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  <% end %>

<%= link_to "add a new task",new_path  %>

</h2>
